.container{
    /* height: 100%; */
    padding-bottom: 100rpx;
    background-color:#f3f3f3;
}

swiper{
    height: 400rpx;
}

swiper .banner, swiper .banner image{
    width: 100%;
    height: 100%;
} 

.categories{
    border-radius: 50rpx;
    margin: 20rpx 30rpx;
}

.categories .categories-header{
    margin-bottom: 10rpx;
}

.latest-orders{
    margin: 20rpx 30rpx;
}

.latest-orders .latest-orders-header{
    display: flex;
    justify-content: space-between; 
}

.latest-orders .latest-orders-header .more text{
    font-size: 24rpx;
    color: #7a7a7a;
}

.van-card{
    margin-top: 20rpx;
    border-radius: 10rpx;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
}

.van-card .card-foot{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.van-card .card-foot .info{
    display: inline;

}

.van-card .card-foot .info text:first-child{
    display: block;
    text-align: left;
    font-weight: bold;
}

.van-card .card-foot .info text:last-child{
    color: #808080;
}
